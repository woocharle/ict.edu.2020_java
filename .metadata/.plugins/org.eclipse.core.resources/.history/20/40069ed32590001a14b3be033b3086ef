		// char k1이 A이면 아프리카, B이면 브라질, C이면 캐나다 나머지 한국
		char k1 = 'A';
		String res;
		
		switch (k1) {
		case 'A':
			res = "아프리카";
			break;
		case 'B':
			res = "브라질";
			break;
		case 'C':
			res = "캐나다";
			break;

		default:
			res = "한국";	
			break;
		}
		
		System.out.println(res);
		
